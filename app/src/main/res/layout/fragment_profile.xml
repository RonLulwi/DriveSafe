<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround"
    tools:context=".Main.FragmentProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_LBL_fullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_text_baseline"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="20dp"
            android:textColor="@color/icons_color"
            android:textSize="21sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_LBL_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_LBL_fullName"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_text_baseline"
            android:drawableLeft="@drawable/ic_address"
            android:drawablePadding="20dp"
            android:textColor="@color/icons_color"
            android:textSize="21sp" />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_LBL_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/ic_text_baseline"
            android:layout_below="@id/profile_LBL_address"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="20dp"
            android:textSize="21sp"
            android:textColor="@color/icons_color"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_LBL_carInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/ic_text_baseline"
            android:layout_below="@id/profile_LBL_email"
            android:drawableLeft="@drawable/ic_car"
            android:drawablePadding="20dp"
            android:textSize="21sp"
            android:textColor="@color/icons_color"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_LBL_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_LBL_carInfo"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_text_baseline"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="20dp"
            android:inputType="textPassword"
            android:textColor="@color/icons_color"
            android:textSize="21sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profile_BTN_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_LBL_password"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/my_green"
            android:drawableEnd="@drawable/ic_arrow_forward"
            android:text="Show Password"
            android:textColor="@color/white" />

    </RelativeLayout>

</FrameLayout>