<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup.FragmentsSignupPage01"
    android:background="@color/backGround"
    android:padding="30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/firstsignuppage_img_progressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="3"
                android:orientation="horizontal">

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_step_done"/>

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_step_undone"/>

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_step_undone"/>

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/signup01_EDT_firstName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="First Name"
                android:textColorHint="#99BED0AC"
                android:inputType="textPersonName"
                android:textColor="@color/icons_color"
                android:layout_margin="10dp"
                android:layout_weight="1"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/signup01_EDT_lastName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="Last Name"
                android:textColorHint="#99BED0AC"
                android:inputType="textPersonName"
                android:textColor="@color/icons_color"
                android:layout_margin="10dp"
                android:layout_weight="1"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/signup01_EDT_address"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="Address"
                android:textColorHint="#99BED0AC"
                android:inputType="textPostalAddress"
                android:layout_margin="10dp"
                android:textColor="@color/icons_color"
                android:layout_weight="1"

                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/signup01_EDT_city"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="City"
                android:textColorHint="#99BED0AC"
                android:inputType="textPersonName"
                android:textColor="@color/icons_color"
                android:layout_margin="10dp"
                android:layout_weight="1"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>




        </LinearLayout>





</RelativeLayout>