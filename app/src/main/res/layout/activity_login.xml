<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/backGround"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="@string/app_logo_name"
        android:textSize="40sp"
        android:fontFamily="@font/redhatdisplay_light"
        android:textColor="@color/logo_color"
        android:gravity="bottom|center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3">


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/login_EDT_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColorHint="#99BED0AC"
            android:textColor="@color/icons_color"
            android:layout_marginTop="60dp"
            />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/login_EDT_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColorHint="#99BED0AC"
            android:layout_below="@id/login_EDT_email"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/icons_color"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/login_BTN_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_EDT_password"
            android:text="LOG IN"
            android:fontFamily="@font/redhatdisplay_semibold"
            android:backgroundTint="@color/my_green"
            />


        <TextView
            android:id="@+id/login_LBL_fingerprint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="place your finger print"
            android:textColor="@color/icons_color"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:layout_above="@id/login_IMG_fingerprint"
            android:fontFamily="@font/redhatdisplay_light"/>

        <ImageView
            android:id="@+id/login_IMG_fingerprint"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_finger_print"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"/>

    </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>