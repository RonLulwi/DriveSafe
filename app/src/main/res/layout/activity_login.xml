<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/backGround"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="@string/app_logo_name"
        android:textSize="40sp"
        android:fontFamily="@font/redhatdisplay_light"
        android:textColor="@color/logo_color"
        android:gravity="bottom|center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3">


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/login_EDT_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Id"
            android:textColorHint="#99BED0AC"
            android:textColor="@color/icons_color"
            android:layout_marginTop="60dp"
            />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/login_EDT_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColorHint="#99BED0AC"
            android:layout_below="@id/login_EDT_id"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/icons_color"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/login_BTN_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_EDT_password"
            android:text="LOG IN"
            android:fontFamily="@font/redhatdisplay_semibold"
            android:backgroundTint="@color/my_green"
            />


                <TextView
                    android:id="@+id/login_LBL_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't have an account?"
                    android:layout_marginTop="10dp"
                    android:textColor="#99BED0AC"
                    android:layout_below="@id/login_BTN_login"/>

                <TextView
                    android:id="@+id/login_BTN_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="13sp"
                    android:text="Sign up"
                    android:textColor="@color/my_green"
                    android:layout_toEndOf="@id/login_LBL_signup"
                    android:layout_alignBottom="@id/login_LBL_signup"
                    android:layout_marginStart="10dp"
                    />

        <TextView
            android:id="@+id/login_LBL_fingerprint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place your finger here"
            android:textColor="@color/icons_color"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:layout_above="@id/login_IMG_fingerprint"
            android:fontFamily="@font/redhatdisplay_light"/>

        <ImageView
            android:id="@+id/login_IMG_fingerprint"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_finger_print" />

    </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>



