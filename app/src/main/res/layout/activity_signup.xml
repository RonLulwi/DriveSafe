<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup.SignupActivity"
    android:background="@color/backGround">
    <TextView
            android:id="@+id/main_LBL_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/icons_color"
            android:text="@string/app_logo_signup"
            android:textSize="35sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:layout_centerHorizontal="true" />
    <FrameLayout
            android:id="@+id/signup_FLY_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/main_LBL_title"
        android:layout_above="@id/signup_BTN_back"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signup_BTN_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:fontFamily="@font/redhatdisplay_semibold"
        android:backgroundTint="@color/my_BTN_green"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="35dp"
        android:layout_alignParentBottom="true"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signup_BTN_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:fontFamily="@font/redhatdisplay_semibold"
        android:backgroundTint="@color/my_BTN_green"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>