<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp">

    <TextView
        android:id="@+id/recyclerView_LBL_info"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:textColor="@color/icons_color"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:id="@+id/recyclerView_LAY_titels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/recyclerView_LBL_info"
        android:layout_marginBottom="1dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Alcohol Test Performer"
            android:gravity="center"
            android:textColor="@color/icons_color"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Driver"
            android:gravity="center"
            android:textColor="@color/icons_color"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/recyclerView_LAY_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerView_LAY_titels"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/recyclerView_IMG_performer"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="7dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/recyclerView_IMG_driver"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="7dp"
            android:layout_weight="1"/>



    </LinearLayout>

    <ImageView
        android:id="@+id/recyclerView_IMG_baseline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/recyclerView_LAY_images"
        android:src="@drawable/ic_text_baseline"/>
</RelativeLayout>