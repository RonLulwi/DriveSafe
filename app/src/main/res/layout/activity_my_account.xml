<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround"
    tools:context=".MyAccountActivity">

    <include
        android:id="@+id/appbar"
        layout="@layout/appbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_below="@id/appbar"
        android:padding="30dp">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/myAccount_LBL_fullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/ic_text_baseline"
        android:drawableLeft="@drawable/ic_person"
        android:drawablePadding="20dp"
        android:text="Ron Lulwi"
        android:textColor="@color/icons_color"
        android:textSize="21sp" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/myAccount_LBL_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/ic_text_baseline"
        android:layout_below="@id/myAccount_LBL_fullName"
        android:drawableLeft="@drawable/ic_address"
        android:drawablePadding="20dp"
        android:text="Hartzel 10 , Rehovot"
        android:textColor="@color/icons_color"
        android:textSize="21sp" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/myAccount_LBL_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/ic_text_baseline"
        android:layout_below="@id/myAccount_LBL_address"
        android:drawableLeft="@drawable/ic_email"
        android:text="RonLulu16@gmail.com"
        android:drawablePadding="20dp"
        android:textSize="21sp"
        android:textColor="@color/icons_color"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/myAccount_LBL_carInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/ic_text_baseline"
        android:layout_below="@id/myAccount_LBL_email"
        android:drawableLeft="@drawable/ic_car"
        android:text="2008, TOYOTA RAV4"
        android:drawablePadding="20dp"
        android:textSize="21sp"
        android:textColor="@color/icons_color"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/myAccount_LBL_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/ic_text_baseline"
        android:layout_below="@id/myAccount_LBL_carInfo"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="20dp"
        android:text="myPassWord"
        android:inputType="textPassword"
        android:textSize="21sp"
        android:textColor="@color/icons_color"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/myAccount_LBL_password"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/my_green"
        android:drawableEnd="@drawable/ic_arrow_forward"
        android:text="Show Password"
        android:textColor="@color/white" />

    </RelativeLayout>


</RelativeLayout>